# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Domain
DOMAIN=webtestingdomain.online

# Database Configuration
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_mongo_password
MONGO_HOST=your_mongodb_atlas_host
MONGO_DB=job_platform

# Redis Configuration
REDIS_HOST=your_redis_elasticache_endpoint

# AWS Configuration
AWS_REGION=us-east-1
ECR_REGISTRY=your_account_id.dkr.ecr.us-east-1.amazonaws.com
NFS_SERVER=your_efs_id.efs.us-east-1.amazonaws.com

# Application Configuration
DEBUG=false
ENVIRONMENT=production

# API Keys (These should be set as Docker secrets, not in env file)
# OPENAI_API_KEY=sk-...
# STRIPE_API_KEY=sk_live_...
# JWT_SECRET=your_jwt_secret
# GOOGLE_OAUTH_CLIENT_ID=...
# GOOGLE_OAUTH_CLIENT_SECRET=...

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@webtestingdomain.online

# Frontend URL
FRONTEND_URL=https://webtestingdomain.online

# Backend URL (internal)
BACKEND_URL=http://backend:8000

# Celery Configuration
CELERY_BROKER_URL=redis://${REDIS_HOST}:6379/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:6379/0

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# CORS Configuration
CORS_ORIGINS=https://webtestingdomain.online

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
